= form_for @projet do |f|
  - if @projet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@projet.errors.count, "erreurs")} : ce projet n'a pas pu être enregistré"
      %ul
        - @projet.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :code, 'Code'
    = f.text_field :code
  .field
    = f.label :nom, 'Nom'
    = f.text_field :nom
  .field
    = f.label :ministere, 'Ministère'
    = f.text_field :ministere
  .field
    = f.label :public, 'Public'
    = f.check_box :public
  .field
    = f.label :description, 'Description'
    = f.text_field :description
  .field
    = f.label :entites_concernees, 'Entités concernées'
    = f.text_field :entites_concernees
  .field
    = f.label :date_debut, 'Date début'
    = f.date_select :date_debut
  .field
    = f.label :type_de_produit, 'Type de produit'
    = f.text_field :type_de_produit
  .field
    = f.label :duree_de_vie, 'Durée de vie'
    = f.number_field :duree_de_vie
  .field
    = f.label :quotation_disis, 'Quotation DISIC'
    = f.number_field :quotation_disic
  .actions
    = f.submit 'Save'
