= form_for @projet do |f|
  - if @projet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@projet.errors.count, "erreurs")} : ce projet n'a pas pu être enregistré"
      %ul
        - @projet.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :code, 'Code',:disable => !Projet._modif.include?(@projet.etat)
    = f.text_field :code
  .field
    = f.label :nom, 'Nom',:disable => !Projet._modif.include?(@projet.etat)
    = f.text_field :nom
  .field
    = f.label :ministere, 'Ministères',:disable => !Projet._modif.include?(@projet.etat)
    = f.select :ministere, Projet.liste_ministeres
  .field
    = f.label :public, 'Public',:disable => !Projet._modif.include?(@projet.etat)
    = f.check_box :public
  .field
    = f.label :description, 'Description',:disable => !Projet._modif.include?(@projet.etat)
    = f.text_field :description
  .field
    = f.label :entites_concernees, 'Entités concernées',:disable => !Projet._modif.include?(@projet.etat)
    = f.text_field :entites_concernees
  .field
    = f.label :date_debut, 'Date début',:disable => !Projet._modif_date.include?(@projet.etat)
    = f.date_select :date_debut, :use_month_numbers => true, :order => [:year, :month, :day]
  - if params["action"] != "new" then
    .field
      = f.label :etat, 'Etat',:disable => !Projet._modif.include?(@projet.etat)
      = f.select :etat, @projet.liste_etats
    .field
      = f.label :quotation_disic, 'Quotation',:disable => !Projet._modif.include?(@projet.etat)
      = f.select :quotation_disic, Projet.liste_quotations
 
  .actions
    = f.submit 'Enregistrer'
