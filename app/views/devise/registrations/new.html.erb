<h2>Créer un compte</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :email, :label => "Votre adresse électronique", :required => true, :autofocus => true %>
    <%= f.input :password, :label => "Choisissez un mot de passe", :required => true %>
    <%= f.input :password_confirmation, :label => "Saisissez à nouveau votre mot de passe", :required => true %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Créer mon compte" %>
  </div>
<% end %>

<%= render "links" %>
