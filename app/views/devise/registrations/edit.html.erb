<h2>Modifier <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="inputs">
    <%= f.input :email, :required => true, :autofocus => true %>
    <%= f.input :password, :autocomplete => "off", :hint => "ne rien saisir si vous ne voulez pas le changer", :required => false %>
    <%= f.input :password_confirmation, :required => false %>
    <%= f.input :current_password, :hint => "nous avons besoin de votre mot de passe actuel pour confirmer vos modifications", :required => true %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Enregistrer" %>
  </div>
<% end %>

<h3>Supprimer mon compte</h3>

<p>Unhappy? <%= link_to "Supprimer mon compte", registration_path(resource_name), :confirm => "Vous confirmez ?", :method => :delete %>.</p>

<%= link_to "Back", :back %>
