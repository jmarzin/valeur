= form_for @parametrage do |f|
  - if @parametrage.errors.any?
    #error_explanation
      %h2= "#{pluralize(@parametrage.errors.count, "error")} prohibited this parametrage from being saved:"
      %ul
        - @parametrage.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :ministere
    = f.text_field :ministere
  .field
    = f.label :code
    = f.text_field :code
  .field
    = f.label :publie
    = f.check_box :publie
  .field
    = f.label :date_publication
    = f.date_select :date_publication
  .actions
    = f.submit 'Save'
